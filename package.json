{
  "name": "@robrez/robrez-com",
  "private": true,
  "license": "MIT",
  "author": "me",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "nuke": "npm run nuke --workspaces && rimraf node_modules",
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "start": "wds --wach --app-index=dev/index.html --open",
    "lint": "eslint --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "site": "wds --watch --root-dir=site/dist-dev --node-resolve",
    "sitep": "wds --watch --root-dir=site/dist --node-resolve"
  },
  "workspaces": [
    "./packages/*",
    "./site"
  ],
  "devDependencies": {
    "@types/node": "^20.19.30",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@web/dev-server": "^0.4.6",
    "eslint": "^8.16.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "tslib": "^2.3.1",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
